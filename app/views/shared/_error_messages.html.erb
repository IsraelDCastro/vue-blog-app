<% if resource.errors.any? %>
  <div class="bg-red-50 p-4 rounded mt-2 mb-6" role="alert">
    <div class="flex items-start justify-start">
      <div class="w-10 mr-4">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" class="fill-current icon mr-4 mt-1 flex-no-shrink" role="img" aria-labelledby="f1yx75u7nv0lvn6ck4z10w7lksjmk2f"><title id="f1yx75u7nv0lvn6ck4z10w7lksjmk2f">Icons/close outline</title><path d="M2.93 17.07A10 10 0 1 1 17.07 2.93 10 10 0 0 1 2.93 17.07zm1.41-1.41A8 8 0 1 0 15.66 4.34 8 8 0 0 0 4.34 15.66zm9.9-8.49L11.41 10l2.83 2.83-1.41 1.41L10 11.41l-2.83 2.83-1.41-1.41L8.59 10 5.76 7.17l1.41-1.41L10 8.59l2.83-2.83 1.41 1.41z"></path></svg>
      </div>
      <div>
        <h4 class="font-black text-sm uppercase mb-2">
          <%= pluralize(resource.errors.count, "error") %> prohibited this article from being saved:
        </h4>
        <ul>
          <% resource.errors.full_messages.each do |message| %>
            <li class="text-red-600"><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>
